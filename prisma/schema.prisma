generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String   @id @default(uuid())
  first_name       String
  last_name        String?
  username         String   @unique
  email            String   @unique
  password         String
  image            String?
  verifyCode       String
  verifyCodeExpiry DateTime
  isVerified       Boolean  @default(false)

  xp    Int @default(0)
  level Int @default(1)
  // Type of User (Student, Professional - Jaisa aapne image me likha)
  persona  UserPersona @default(STUDENT)
  habits   Habit[] //one user -> many Habit
  todos    todos[]
  focuslog FocusLog[]

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  accounts Account[]
  sessions Session[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Habit {
  id          String  @id @default(uuid())
  title       String
  description String?
  duration    Int?    @default(30)

  currentStreak Int @default(0) // <-- Spelling fixed
  longestStreak Int @default(0) // <-- Spelling fixed

  userId String
  user   User   @relation(fields: [userId], references: [id])

  logs HabitLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HabitLog {
  id     String      @id @default(uuid())
  date   DateTime    @default(now())
  status HabitStatus @default(PENDING)
  note   String?

  habitId String
  habit   Habit  @relation(fields: [habitId], references: [id]) // <-- Points to Habit

  @@unique([habitId, date])
}

model todos {
  id          String  @id @default(uuid())
  title       String // Task name: "write Assignment"
  description String?
  isCompleted Boolean @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model FocusLog {
  id           String   @id @default(uuid())
  duration     Int      // In minutes (e.g., 45 minutes)
  goalDuration Int      // How long the user thought (e.g., 60 minutes)
  
  xpEarned     Int      // How much XP was gained from this session
  
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  
  createdAt    DateTime @default(now())
}

enum UserPersona {
  STUDENT
  PROFESSIONAL
  FREELANCER
  OTHER
}

enum HabitStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  SKIPPED
}
